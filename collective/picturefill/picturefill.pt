<span data-picture tal:attributes="data-alt string:${view/alt}">
   <span tal:attributes="data-src string:${view/noscript};"></span>
   <tal:picture tal:repeat="picture view/pictures">
     <span tal:attributes="data-src string:${picture/src}; data-media string:${picture/media}"></span>
   </tal:picture>
   <noscript>
       <img tal:attributes="src string:${view/noscript}; alt string:${view/alt}"/>
   </noscript>
</span>